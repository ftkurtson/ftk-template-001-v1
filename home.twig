{% extends "layout.twig" %}

{% block content %}

<section class="bk-section">
    <header class="bk-header">
        <div class="header-wrapper clearfix">
            <div class="companyheader">
                {{widget('logo', 'logo', {"defaultlogo": asset('images/logo.png')})|raw}}
                {{widget('companyname', 'companyname', {"business": "profile"})|raw}}
            </div>
            {{widget('extendednavigation', 'navigationheader', {"align":"right"})|raw}}
        </div>
    </header>
    {{widget('feature', 'thisunqiuewidgetname', {"header": "profile", "strapline":"profile", "buttonText":"Lorem Ipsum","defaultBgImg": asset('images/feature-bg.jpg'), 'positionTopPercentage': '0','showBtn': true})|raw}}
</section>
<section>
	{{widget('gallery', 'ftk-gallery-01',
	{'showDescription': true,
	'showTitle': true,
 	{'images':
	[
	{'imageHeight':'320', 'imageWidth':'480', 'url':asset('/images/gallery/1.jpg'), 'title':'Image 1', 'description': 'This is image 1'},
	{'imageHeight':'320', 'imageWidth':'480', 'url':asset('/images/gallery/2.jpg'), 'title':'Image 2', 'description': 'This is image 2'},
	{'imageHeight':'320', 'imageWidth':'480', 'url':asset('/images/gallery/3.jpg'), 'title':'Image 3', 'description': 'This is image 3'},
	{'imageHeight':'320', 'imageWidth':'480', 'url':asset('/images/gallery/4.jpg'), 'title':'test title', 'description': 'This is image4'}]})|raw}}

<div class="canvas">
    <div class="main wrapper clearfix">
        {{zone('main')|raw}}
    </div>
</div>
</section>

<footer class="bk-footer">
    <div class="wrapper clearfix">
        {{widget('companyaddress', 'companyaddress', {})|raw}}
    </div>
</footer>

{% endblock %}
